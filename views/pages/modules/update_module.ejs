<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('../../partials/head') %>
    <title>Update Sector</title>
    <link rel="stylesheet" href="/styles/add_and_update_student.css"> 
    <link rel="stylesheet" href="/styles/multiple-select.css"> 

    <script src="/js/multiple-select.js"></script>
    <script defer src="/js/umbrella.js"></script>
    <script defer src="/js/clearBtn.js"></script>
    
</head>
<body>
    <div class="background"></div>
    <div class="container">
            <h1>Modifier un module</h1>
            <div class="fields">
            <label for="">Le nom du module : </label>
                <input class="inpt" type="text" name="name" value="<%= module.name %>">
                
                <label for="sector">Fili√®re : </label>
                <select class="select selectpicker" name="sectors" id="sector" multiple="multiple">
                    <% sectors.forEach(sector => { 
                      if (module.sectors.map(sector => sector.sectorId).includes(sector.id)) { %> 
                        <option value="<%= sector.id %>" selected><%= sector.name %></option>
                    <% } else { %>
                        <option value="<%= sector.id %>"><%= sector.name %></option>
                    <% }
                    }) %> 
                </select>

                <label for="semester">Semester : </label>
                <select class="select" name="semesters" id="semester" multiple>
                    <% semesters.forEach(semester => { 
                      if (module.semesters.map(semester => semester.semesterId).includes(semester.id)) { %> 
                        <option value="<%= semester.id %>" selected><%= semester.name %></option>
                    <% } else { %>
                        <option value="<%= semester.id %>"><%= semester.name %></option>
                    <% }
                    }) %> 
                </select>
                <a class="returnBtn" href="/modules"><i class="fa-solid fa-arrow-left"></i></a>
                <span class="btns">
                    <input class="clearBtn" type="button" value="Effacer">
                    <input class="submitBtn" type="submit" value="Ajouter">
                </span>
            </div>
        </form>
    </div>
</body>
</html>